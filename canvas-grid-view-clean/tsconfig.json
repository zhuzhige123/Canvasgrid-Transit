{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES2020"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
